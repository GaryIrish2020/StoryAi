<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.StoryAi" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.StoryAi.Splash" parent="Theme.SplashScreen">
        <!-- Set the background to black to match the video player -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <!-- Remove the animated icon -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <!-- Set the theme to return to after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.StoryAi</item>
    </style>
</resources>
